<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录测试"/>

        <Button
            android:id="@+id/login_main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="到主页"/>

        <ImageView
            android:id="@+id/test_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/image_select_one_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择一张"/>

        <Button
            android:id="@+id/image_select_more_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择多张"/>

        <Button
            android:id="@+id/image_select_cop_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1:1裁剪"/>

        <Button
            android:id="@+id/image_select_cops_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自由裁剪"/>

        <com.app.ui.view.chat.ChatLeftText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="123\njljlkjlkjlk"
            android:textColor="#333333"
            android:textSize="14sp"
            />

        <com.app.ui.view.chat.ChatRightText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="123\njljlkjlkjlk"
            android:textColor="#333333"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/chat_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/default_image"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/chat_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/default_image"
            />
    </LinearLayout>
</ScrollView>