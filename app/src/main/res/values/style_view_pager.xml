<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyledIndicators" parent="NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicator</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--title字体样式-->
    <style name="CustomTitlePageIndicator">
        <item name="android:background">#2ea7e0</item>
        <item name="android:showDividers">middle</item>
        <item name="footerColor">#2ea7e0</item>
        <item name="footerLineHeight">0dp</item>
        <item name="footerIndicatorHeight">2dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#444444</item>
        <item name="selectedColor">#2ea7e0</item>
        <item name="android:textSize">16sp</item>
        <item name="titlePadding">2dp</item>
    </style>

</resources>
